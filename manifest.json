{
  "manifest_version": 3,
  "name": "LeetBeats",
  "version": "1.0",
  "permissions": ["scripting", "activeTab"],
  "icons": {
    "16": "./assets/16.png",
    "32": "./assets/32.png",
    "48": "./assets/48.png",
    "128": "./assets/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/images/*", "assets/audio/*"],
      "matches": ["https://leetcode.com/*"]
    }
  ]
}
